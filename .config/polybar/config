

[bar/fullbar]
monitor = 
include-file = ~/.config/polybar/fullbar
background = #bb212121
foreground = #c4c7d1
modules-left = i3 separator spotify
modules-center =
modules-right = memory cpu volume wlan backlight battery xkeyboard date


;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;


[module/memory]
type = internal/memory
internal = 1
format = <label>
label =   %mb_used%

[module/cpu]
type = internal/cpu
internal = 0.5
format =   <label>%
label = %percentage%

[module/date]
type = internal/date
interval = 60
date = %a %d %b
time = %l:%M %p
label =  %date%   %time%
;label =  %time%
format-padding = 1


[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
poll-interval = 2
format-discharging =  <label-discharging>%
format-full =  <label-full> 
format-charging =   <label-charging>% 
label-charging = %percentage%
label-discharging =  %percentage%
label-full =  Full
time-format = %H:%M

[module/backlight]
type = internal/backlight
card = intel_backlight
enable-scroll = false
format = <ramp>
ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 


[module/wlan]
type = internal/network
interface = wlp3s0
interval = 5
label-connected =  
label-disconnected = 

[module/volume]
type = internal/alsa
format-volume =   <ramp-volume> <label-volume>
format-muted = 
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/spotify]
type = custom/script
interval = 1
format-prefix = " "
format = <label>
exec = python /home/mjancek/.config/polybar/scripts/spotify_status.py -f '{song} - {artist}'
format-underline = #1db954

[module/time]
type = internal/date
interval = 5
label-foreground = #b6a49b
date =
date-alt = " %Y-%m-%d"
time = %H:%M
time-alt = %H:%M:%S
format-prefix = 
format-prefix-foreground = #b6a49b
format-padding = 1
label = %date% %time%

[module/eth]
type = internal/network
interface = enp2s0
interval = 3.0
format-connected = <label-connected>
format-connected-prefix = " "
format-connected-prefix-foreground = #eceff4
label-connected = %downspeed:9%
format-disconnected = <label-disconnected>
label-disconnected = not connected
label-disconnected-foreground = #66ffffff
format-padding = 1

[module/xkeyboard]
type = internal/xkeyboard
format = <label-layout>
label-layout = %layout%
label-indicator = %name%

[module/mpd]
type = internal/mpd
interval = 2
format-online = <toggle> <label-song> <icon-next>
label-song = %artist% - %title%
label-song-maxlen = 20
label-song-ellipsis = true
label-online = "MPD is offline"
icon-play = 
icon-pause = 
icon-stop = 
icon-prev = 
icon-next = 
format-padding = 2

[module/i3]
type = internal/i3
pin-workspace = false
index-sort = true

enable-click = true
enable-scroll = true
wrapping-scroll = false
reverse-scroll = false
format = <label-state>
label-focused = %name%
label-focused-padding = 1
label-focused-background = "#c4c7d1"
label-focused-foreground = "#212121"
label-unfocused = %name%
label-unfocused-padding = 1
label-visible = %name%
label-visible-padding = 1
label-mode = %mode%
label-mode-padding = 1
label-urgent = %name%
label-urgent-padding = 1

[module/title]
type = internal/xwindow
format = <label>
label =  %title%
label-maxlen = 20


[module/notifications]
type = custom/text
content = 
